<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
          PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" 
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
          
<mapper namespace="account">

	<select id="selectByIdAndPw" parameterType="Account"
	        resultType="Account">		
		<![CDATA[
			SELECT id, name
			FROM members 
			WHERE id = #{id} AND
			      password = #{password}
		]]>
	</select>

</mapper>
